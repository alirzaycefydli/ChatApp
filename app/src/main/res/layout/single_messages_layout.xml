<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_message_image"
        android:src="@drawable/u"
        android:layout_marginTop="10dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />


    <TextView
        android:id="@+id/single_messages_name"
        tools:text="ali"
        android:layout_toEndOf="@id/single_message_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/single_time"
        android:layout_toEndOf="@id/single_messages_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        tools:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/single_message"
        tools:text="nameasfasfsdfsfsdf"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_below="@id/single_messages_name"
        android:layout_toEndOf="@id/single_message_image"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/single_send_image"
        android:layout_below="@id/single_message"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>