<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/singl_friends_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/u"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/single_friends_name"
            android:layout_marginTop="8dp"
            tools:text="name"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/singl_friends_image"/>

        <ImageView
            android:id="@+id/single_online"
            android:src="@drawable/ic_online_red"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/single_friends_name"
            android:layout_width="20dp"
            android:layout_marginStart="15dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/single_friends_status"
            android:layout_below="@id/single_friends_name"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            tools:text="status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/singl_friends_image"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>